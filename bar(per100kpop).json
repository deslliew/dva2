{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/deslliew/dva2/main/bar(per%20capita).csv"
  },
  "title": "Average CO2 Emission Rates (per 100k population) in Asia (2017 - 2021), Based on Gender",
  "width": "container",
  "height": 355,
  "encoding": {
    "y": {"field": "Year", "type": "nominal", "title": "Year", "stack": "zero"},
    "x": {
      "field": "Average CO2 Emission Rates (per capita)",
      "type": "quantitative",
      "axis": {"format": ".2f"},
      "scale": {"domain": [0, 250]},
      "stack": "zero"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "Sector",
          "type": "nominal",
          "scale": {
            "domain": [
              "Construction Materials Sector",
              "Oil & Gas Sector",
              "Transportation Sector"
            ],
            "range": ["#aec7e8", "#dea5a4", "#a5a4de"]
          },
          "title": "Sector"
        },
        "tooltip": [
          {"field": "Year", "type": "nominal", "title": "Year"},
          {"field": "Sector", "type": "nominal", "title": "Sector"},
          {
            "field": "Average CO2 Emission Rates (per capita)",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "dx": -18,
        "dy": 3,
        "align": "center"
      },
      "encoding": {
        "detail": {"type": "nominal", "field": "site"},
        "text": {
          "type": "quantitative",
          "aggregate": "sum",
          "field": "Average CO2 Emission Rates (per capita)",
          "format": ".2f"
        }
      }
    }
  ],
  "config": {}
}